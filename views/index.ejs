<%- include('layout/header') %>

<div class="container" style="background-color: #f0f8ff; font-family: 'Arial', sans-serif;">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
        <div
          class="alert alert-dismissible fade show"
          role="alert"
        >
          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
          <strong><%= message.message %></strong>
        </div>
      <% } %>

      <div class="table-responsive">
        <% if (users.length > 0) { %>
          <table class="table text-center my-3" style="border-color: #ccc">
            <thead class="text-center" style="background-color: #343a40; color: #fff">
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% users.reverse().forEach((row) => { %>
                <tr class="align-middle" style="background-color: #eaf0f8; color: #333">
                  <td>
                    <img src="<%= row.image %>" width="50" class="img-thumbnail" alt=""/>
                  </td>
                  <td><%= row.name %></td>
                  <td><%= row.email %></td>
                  <td><%= row.phone %></td>
                  <td>
                    <a href="/edit/<%= row._id %>" class="text-info"><i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <h1 class="text-center mt-5" style="color: #6c757d">No users found in the database!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
